# Panda editor configuration normalization
# This file is for unifying the coding style for different editors and IDEs
# @see http://editorconfig.org/

# We use the WordPress Coding Standards as reference
# https://make.wordpress.org/core/handbook/coding-standards/

# This is the top-most .editorconfig file
# Do not search in parent directories
root = true

# All files.
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.{jshintrc,json,md,yml,yaml},.pnp.js]
indent_size = 2
indent_style = space

[.pnp.js]
indent_size = 2
indent_style = space

[composer.{json,lock}]
indent_size = 4
indent_style = space

[*.md]
trim_trailing_whitespace = false

